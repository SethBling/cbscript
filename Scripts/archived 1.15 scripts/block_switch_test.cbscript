dir "C:\Users\Seth\AppData\Roaming\.minecraft 1.14\saves\SethBling's World 1.14"
desc "Test block switches."

import common

reset

end

clock main
	test_step++

	if test_step >= 3
		test_step = 0

		as @Player at @s ~ ~-1 ~
			id = -1
			switch block
				case *[facing=east]
					id = $block_id
				end
				case *[facing=north]
					id = $block_id
				end
				case *[facing=west]
					id = $block_id
				end
				case *[facing=south]
					id = $block_id
				end
			end
			switch block id
				case *[facing=east]
					$block_name = $block_name.$replace('facing=east', 'facing=north')
					/setblock ~ ~ ~ $block_name
				end
				case *[facing=north]
					$block_name = $block_name.$replace('facing=north', 'facing=west')
					/setblock ~ ~ ~ $block_name
				end
				case *[facing=west]
					$block_name = $block_name.$replace('facing=west', 'facing=south')
					/setblock ~ ~ ~ $block_name
				end
				case *[facing=south]
					$block_name = $block_name.$replace('facing=south', 'facing=east')
					/setblock ~ ~ ~ $block_name
				end
			end
		end
	end
end
