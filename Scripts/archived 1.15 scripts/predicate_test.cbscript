dir "C:\Users\Seth\AppData\Roaming\.minecraft 1.15\saves\SethBling's World 1.15"
desc "Test for predicate feature"

import common

predicate dark {
	condition: 'location_check',
	predicate: {
		light : {
			light: {
				min: 0,
				max: 8
			}
		}
	}
}

predicate night {
	condition: 'time_check',
	value: {
		min: 13000,
		max: 24000
	},
	period: 24000
}

define @Player : @Player
	predicate sneaking {
		condition: "entity_properties",
		entity: "this",
		predicate: {
			flags: {
				is_sneaking: true
			}
		}
	}

	predicate desert {
		condition: "location_check",
		predicate: {
			biome: "desert"
		}
	}

	predicate above_64 {
		condition: 'location_check',
		predicate: {
			position: {
				y: {
					min: 64,
					max: 256
				}
			}
		}
	}

	predicate survival {
		condition: 'entity_properties',
		entity: 'this',
		predicate: {
			player: {
				gamemode: 'survival'
			}
		}
	}
end

predicate coin_flip {
	condition: 'random_chance',
	chance: 0.5
}

reset

end

clock main
	#/execute as @p if predicate $namespace:sneaking run say hi
	at @Player if predicate night
		/say night
	end

	as @Player[survival]
		/say survival
	end
end
